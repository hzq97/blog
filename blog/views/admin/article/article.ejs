<%- include('../share/header') %>

    <body>
        <div id="wrapper">
            <%- include('../share/menu') %>
                <div id="page-wrapper">
                    <div class="row">
                        <div class="col-lg-12">
                            <h1 class="page-header">文章列表</h1>
                        </div>
                        <!-- /.col-lg-12 -->
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        文章列表
                                    </div>
                                    <!-- /.panel-heading -->
                                    <div class="panel-body">
                                        <div class="table-responsive">
                                            <table class="table table-hover">
                                                <thead>
                                                    <tr>
                                                        <th>文章ID</th>
                                                        <th>文章标题</th>
                                                        <th>摘要</th>
                                                        <th>文章内容</th>
                                                        <!-- <th>文章发布时间</th> -->
                                                        <!-- <th>文章浏览次数</th> -->
                                                        <th>文章分类</th>
                                                        <th>文章图片</th>
                                                        <th>操作</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% for(var i = 0;i<article.length;i++){ %>
                                                        <tr>
                                                            <td>
                                                                <%= article[i]._id %>
                                                            </td>
                                                            <td>
                                                                <%= article[i].title %>
                                                            </td>
                                                            <td>
                                                                <%= article[i].intro %>
                                                            </td>
                                                            <td>
                                                                <%= article[i].content.substr(0,30)+'...' %>
                                                            </td>
                                                            <td>
                                                                <%= article[i].type_id %>
                                                            </td>
                                                            <td>
                                                                <img width=50 height=50 src="<%= article[i].pic %>" alt="" />
                                                            </td>
                                                            <td>
                                                                <a class="btn btn-primary" href="/article/<%= article[i]._id %>/edit">修改</a>
                                                                <a class="btn btn-danger" href="/article/<%= article[i]._id %>/del">删除</a>
                                                            </td>
                                                        </tr>
                                                        <% } %>
                                                </tbody>
                                            </table>
                                            <div class="col-md-6 col-offset-md-6 pull-right">
                                                <div class="dataTables_paginate paging_simple_numbers" id="dataTables-example_paginate">
                                                    <ul class="pagination">
                                                        <%- html %>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- /.table-responsive -->
                                    </div>
                                    <!-- /.panel-body -->
                                </div>
                                <!-- /.panel -->
                            </div>
                        </div>
                    </div>
                    <!-- /#page-wrapper -->
                </div>
                <!-- /#wrapper -->
    </body>
    <%- include('../share/footer') %>
        <script>
        $(function() {
            //页码处理
            if (<%= code %> == 0) {
                $('.previous').addClass('disabled');
                $('.previous').click(function() {
                    return false;
                })
            } else if (<%= code %> == 1) {
                $('.next').addClass('disabled');

                $('.next').click(function() {
                    return false;
                })
            } else {
                $('.next').removeClass('disabled');
                $('.previous').removeClass('disabled');
            }
        })
        </script>