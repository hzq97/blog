<%- include('../share/header') %>
    <link rel="stylesheet" href="/bower_components/editor.md/css/editormd.min.css">

    <body>
        <div id="wrapper">
            <%- include('../share/menu') %>
                <div id="page-wrapper">
                    <div class="row">
                        <div class="col-lg-12">
                            <h1 class="page-header">文章用户</h1>
                        </div>
                        <!-- /.col-lg-12 -->
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    文章添加
                                </div>
                                <div class="panel-body">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <form role="form" enctype="multipart/form-data" action="/article" method="post" class="form">
                                                <div class="form-group">
                                                    <label>文章标题</label>
                                                    <input class="form-control username" type="text" placeholder="" name="title">
                                                </div>
                                                <p style="color:red" class="use-msg"></p>
                                                <!-- <div class="form-group">
                                                    <label>文章内容</label>
                                                    <input  type="text" name="content">
                                                </div> -->
                                                <!-- //编辑器 -->
                                                <div id="editormd">
                                                    <label>文章内容</label>
                                                    <textarea style="display:block;" class="con-text" name="content">### Hello Editor.md !</textarea>
                                                </div>
                                                <p style="color:red" class="con-msg"></p>
                                                <div class="form-group">
                                                    <label>文章摘要</label>
                                                    <input class="form-control" type="text" name="intro">
                                                </div>
                                                <div class="form-group">
                                                    <label>文章图片</label>
                                                    <input type="file" name="img" class="img">
                                                </div>
                                                <div class="form-group">
                                                    <label>文章分类</label>
                                                    <select name="type_id" class="form-control type" id="">
                                                        <option value="">请选择</option>
                                                        <% for(var i = 0;i<type.length;i++){ %>
                                                            <option value="<%= type[i].typename %>">
                                                                <%= type[i].typename %>
                                                            </option>
                                                            <% } %>
                                                    </select>
                                                </div>
                                                <p style="color:red" class="type-msg"></p>
                                                <button type="submit" class="btn btn-default">注册</button>
                                                <button type="reset" class="btn btn-default">重置</button>
                                            </form>
                                        </div>
                                        <!-- /.col-lg-6 (nested) -->
                                    </div>
                                    <!-- /.row (nested) -->
                                </div>
                                <!-- /.panel-body -->
                            </div>
                            <!-- /.panel -->
                        </div>
                        <!-- /.col-lg-12 -->
                    </div>
                </div>
                <!-- /#page-wrapper -->
        </div>
        <!-- /#wrapper -->
    </body>
    <%- include('../share/footer') %>
        <script src="/bower_components/editor.md/editormd.min.js"></script>
        <script type="text/javascript">
        $(function() {
            var editor = editormd("editormd", {
                path: "/bower_components/editor.md/lib/",
                height: 500,
                imageUpload: true,
                imageFormats: ["jpg", "jpeg", "gif", "png", "bmp", "webp"],
                imageUploadURL: "/uploads",
            });
            //表单处理
            $('.form').submit(function(event) {
                if ($('.username').val() == '') {
                    $('.use-msg').html('标题不能为空');
                    event.preventDefault();
                } else if ($('.con-text').val() == '') {
                    $('.con-msg').html('内容不能为空');
                    event.preventDefault();
                } else if ($('.type').val() == '') {
                    $('.type-msg').html('请选择此信息分类');
                    event.preventDefault();
                }
            })
        });
        </script>
