<%- include('../share/header') %>

    <body>
        <div id="wrapper">
            <%- include('../share/menu') %>
                <div id="page-wrapper">
                    <div class="row">
                        <div class="col-lg-12">
                            <h1 class="page-header">用户列表</h1>
                        </div>
                        <!-- /.col-lg-12 -->
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        用户列表
                                    </div>
                                    <!-- /.panel-heading -->
                                    <div class="panel-body">
                                        <div class="table-responsive">
                                            <table class="table table-hover">
                                                <thead>
                                                    <tr>
                                                        <th>用户ID</th>
                                                        <th>用户名</th>
                                                        <th>用户昵称</th>
                                                        <th>用户邮箱</th>
                                                        <th>用户头像</th>
                                                        <th>操作</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% for(var i = 0;i<user.length;i++){ %>
                                                        <tr>
                                                            <td>
                                                                <%= user[i]._id %>
                                                            </td>
                                                            <td>
                                                                <%= user[i].username %>
                                                            </td>
                                                            <td>
                                                                <%= user[i].nickname %>
                                                            </td>
                                                            <td>
                                                                <%= user[i].email %>
                                                            </td>
                                                            <td><img width=50 height="50" src="
                                                                <%= user[i].img %>" alt="" /></td>
                                                            <td>
                                                                <a class="btn btn-primary" href="/user/<%= user[i]._id %>/edit">修改</a>
                                                                <a class="btn btn-danger" href="/user/<%= user[i]._id %>/del">删除</a>
                                                            </td>
                                                        </tr>
                                                        <% } %>
                                                </tbody>
                                            </table>
                                            <div class="col-md-6 col-offset-md-6 pull-right">
                                                <div class="dataTables_paginate paging_simple_numbers" id="dataTables-example_paginate">
                                                    <ul class="pagination">
                                                        <%- html %>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- /.table-responsive -->
                                    </div>
                                    <!-- /.panel-body -->
                                </div>
                                <!-- /.panel -->
                            </div>
                        </div>
                    </div>
                    <!-- /#page-wrapper -->
                </div>
                <!-- /#wrapper -->
    </body>
    <%- include('../share/footer') %>
        <script>
        $(function() {
            //页码处理
            if (<%= code %> == 0) {
                $('.previous').addClass('disabled');
                $('.previous').click(function() {
                    return false;
                })
            } else if (<%= code %> == 1) {
                $('.next').addClass('disabled');

                $('.next').click(function() {
                    return false;
                })
            } else {
                $('.next').removeClass('disabled');
                $('.previous').removeClass('disabled');
            }
        })
        </script>