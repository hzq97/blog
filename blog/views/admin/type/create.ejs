<%- include('../share/header') %>

    <body>
        <div id="wrapper">
            <%- include('../share/menu') %>
                <div id="page-wrapper">
                    <div class="row">
                        <div class="col-lg-12">
                            <h1 class="page-header">添加分类</h1>
                        </div>
                        <!-- /.col-lg-12 -->
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    分类添加
                                </div>
                                <div class="panel-body">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <form role="form" enctype="multipart/form-data" action="/type" method="post" class="form">
                                                <div class="form-group">
                                                    <label>分类名称</label>
                                                    <input class="form-control username" type="text" placeholder="" name="typename">
                                                </div>
                                                <p class="msg"></p>
                                                <button type="submit" class="btn btn-default">添加</button>
                                                <button type="reset" class="btn btn-default">重置</button>
                                            </form>
                                        </div>
                                        <!-- /.col-lg-6 (nested) -->
                                    </div>
                                    <!-- /.row (nested) -->
                                </div>
                                <!-- /.panel-body -->
                            </div>
                            <!-- /.panel -->
                        </div>
                        <!-- /.col-lg-12 -->
                    </div>
                </div>
                <!-- /#page-wrapper -->
        </div>
        <!-- /#wrapper -->
    </body>
    <%- include('../share/footer') %>
        <script>
        $.ajaxSetup({
            async: false
        });
        $(function() {
            //表单处理
            $('.form').submit(function(event) {
                if ($('username').val() != '') {
                    $.get('/typeMsg', { type: $('.username').val() }, function(msg) {
                        if (msg != '') {
                            $('.msg').html(msg);
                            event.preventDefault()
                        }
                    })
                } else {
                    $('.msg').html('分类不能为空');
                    event.preventDefault()
                }
            })
        })
        </script>